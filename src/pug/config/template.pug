        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
        //-- SCRIPT FANCYBOX
        script(src='https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js')
        //-- MAIN
        script(src="public/js/main-min.js")
        block script-final

